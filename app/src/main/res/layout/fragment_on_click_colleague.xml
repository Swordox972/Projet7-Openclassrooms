<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_on_click_colleague"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".ui.fragment.OnClickRestaurantFragment">


    <ImageView
        android:id="@+id/fragment_on_click_colleague_photo"
        android:contentDescription="Avatar colleague"
        android:layout_width="250px"
        android:layout_height="250px"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

<TextView
    android:id="@+id/fragment_on_click_colleague_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:textSize="20sp"
    android:textColor="#8E8888"
    app:layout_constraintStart_toEndOf="@id/fragment_on_click_colleague_photo"
    app:layout_constraintTop_toTopOf="@id/fragment_on_click_colleague_photo"
    app:layout_constraintBottom_toBottomOf="@id/fragment_on_click_colleague_photo"/>
    <TextView
        android:id="@+id/fragment_on_click_colleague_restaurant_joining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"

        android:textColor="#8E8888"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/fragment_on_click_colleague_name"
        app:layout_constraintTop_toTopOf="@id/fragment_on_click_colleague_name"
        app:layout_constraintBottom_toBottomOf="@id/fragment_on_click_colleague_name" />
</androidx.constraintlayout.widget.ConstraintLayout>